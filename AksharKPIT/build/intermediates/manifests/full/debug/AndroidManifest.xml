<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aksharkpit"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

    <!-- permission to write file on internal sdcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.aksharkpit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- displaying alphabet with drawing facility -->
        <activity android:name="com.example.aksharkpit.CanvasActivity" />

        <!-- standard class file for loading list of gestures from gestures file -->
        <activity android:name="com.example.aksharkpit.GestureBuilderActivity" />

        <!-- standard class file for creating gestures -->
        <activity android:name="com.example.aksharkpit.CreateGestureActivity" />

        <!-- activity is for recongising gestures -->
        <activity android:name="com.example.aksharkpit.TestGesture" />
    </application>

</manifest>