<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kpit.aksharkpit"
    android:versionCode="1"
    android:versionName="1.0" >
	
    <!-- permission to write file on internal sdcard -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />
    
	 <supports-screens android:smallScreens="true" 
          android:normalScreens="true" 
          android:largeScreens="true"
          android:xlargeScreens="true"
          android:anyDensity="true" />
    
   	 <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.example.aksharkpit.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
        </activity>
        
        <!-- displaying alphabet with drawing facility -->
        <activity android:name="com.example.aksharkpit.CanvasActivity"></activity>
        
        <!-- standard class file for loading list of gestures from gestures file -->
        <activity android:name="com.example.aksharkpit.GestureBuilderActivity"></activity>
        
        <!-- standard class file for creating gestures -->
        <activity android:name="com.example.aksharkpit.CreateGestureActivity"></activity>
        
        <!-- activity is for recongising gestures -->
        <activity android:name="com.example.aksharkpit.TestGesture"></activity>
        
        
       
    </application>

</manifest>